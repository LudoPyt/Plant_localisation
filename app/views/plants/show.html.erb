<div id="show_plants">
  <div class="container-custom">
    <div class="container">
      <p id="notice"><%= notice %></p>

      <h1><%= @plant.name %></h1>

      <% if @plant.pictures.attached? %>
      <div class="container-img">
        <% @plant.pictures.each do |pict|%>
          <%= image_tag(pict, class: 'img-fluid') %>
        <% end %>
      </div>
      <% else %>
        <div class="container-img">
          <%= image_tag('placeholder-img.jpg') %>
        </div>
      <% end %>

      <div class="elt-description">
        <% if @plant.creationDate != nil %>
          <p>Date de création :&nbsp<%= @plant.creationDate %></p>
        <% end %>

        <% if @plant.getter != nil %>
          <p>Créateurs :&nbsp<%= @plant.getter %></p>
        <% end %>

        <% if @plant.family != nil  %>
          <p>Famille :&nbsp<%= @plant.family %></p>
        <% end %>

        <% if @plant.color != nil  %>
          <p>Couleur :&nbsp<%= @plant.color %></p>
        <% end %>

        <% if @plant.caracteristics != nil  %>
          <p>Type :&nbsp<%= @plant.caracteristics %></p>
        <% end %>
      </div>

      <div class="elt-description">
        <% if @plant.description != nil %>
          <!-- <p>Description :</p> -->
          <p><%= @plant.description %></p>
        <% end %>
      </div>

      <div class="elt-description">
        <% if @plant.maintenance != nil %>
          <!-- <p>Entretien :</p> -->
          <p><%= @plant.maintenance %></p>
        <% end %>
      </div>

      <% if user_signed_in? && current_user.approved != false %>
        <div class="btn-container-wiki">
          <div class="elt-btn-wiki">
            <%= link_to "Modifier l'article", edit_plant_path(@plant), class: "btn-wiki" %>
          </div>
        </div>
      <% end %>

      <% if @plant.positions.exists? %>
        <div class="container-map">
          <div class="map" id="map">
          <%= image_tag("map.svg") %>
          <% @positions.each do |position| %>
            <%= link_to position do %>
              <div class="map__position" style="left: <%= position.to_percent_x %>%; top: <%= position.to_percent_y %>%;"></div>
            <% end %>
          <% end %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
