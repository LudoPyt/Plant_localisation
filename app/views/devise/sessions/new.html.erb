<div class="container new-session-container">
  
    <div class="row parent">

      <div class = "col-7">

        <div class="flex">

          <div class="new-session">

            <h2 class="text-left">Connexion</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
              <div class="form-inputs input-italic">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "Email" },
                            label: false,
                            placeholder: 'Adresse mail...' %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "Current password" },
                            label: false,
                            placeholder: 'Mot de passe...' %>
                <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
              </div>
            <%= render "devise/shared/links" %>

          </div>

        </div>

      </div>

      <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "classic-button btn-custom" %>
      </div>

      <%= render "devise/shared/inscription" %>
      <% end %>

    </div>

  </div>
  
</div>
